package com.revature.web;

import java.util.ArrayList;
import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

public class DispatcherChain implements Dispatcher, Registry {
	
	private static final List<Dispatcher> dispatchers = new ArrayList<>();
	private static final DispatcherChain instance = new DispatcherChain();
	private static final Logger logger = LogManager.getLogger(DispatcherChain.class);
	
	private DispatcherChain() {}

	@Override
	public void register(Dispatcher dispatcher) {
		dispatchers.add(dispatcher);
		logger.info("{} dispatchers registered", dispatchers.size());
	}

	@Override
	public boolean supports(HttpServletRequest request) {
		for (Dispatcher d : dispatchers) {
			if (d.supports(request)) {
				return true;
			}
		}
		return false;
	}

	@Override
	public Object execute(HttpServletRequest request) {
		for (Dispatcher d : dispatchers) {
			if (d.supports(request)) {
				return d.execute(request);
			}
		}
		return null;
	}

	public static DispatcherChain getInstance() {
		return instance;
	}
}
